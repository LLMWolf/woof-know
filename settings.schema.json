{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spree.local/schema/settings.schema.json",
  "title": "WOOF-KNOW (СПРИ) — Settings Schema",
  "description": "Схема валидации конфигурации settings.json для СПРИ (MVP R0.1–R0.3). Все поля и описания на русском языке. По умолчанию система работает в режиме strict_local.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "Версия формата настроек (SemVer)",
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?$",
      "default": "0.1.0"
    },
    "privacy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "profile": {
          "description": "Профиль приватности по умолчанию",
          "type": "string",
          "enum": ["strict_local", "hybrid", "cloud_ok"],
          "default": "strict_local"
        },
        "kill_switch": {
          "description": "Глобальная блокировка любых внешних вызовов (поверх профиля)",
          "type": "boolean",
          "default": false
        }
      },
      "required": ["profile", "kill_switch"]
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rate_per_min": { "type": "integer", "minimum": 1, "default": 100 },
        "max_tokens": { "type": "integer", "minimum": 1, "default": 1024 }
      },
      "required": ["rate_per_min"]
    },
    "llm": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provider": { "type": "string", "const": "ollama" },
        "model": { "type": "string", "default": "llama3.1:8b" },
        "temperature": { "type": "number", "minimum": 0, "maximum": 2, "default": 0.2 },
        "timeout_s": { "type": "integer", "minimum": 1, "default": 60 },
        "retries": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max": { "type": "integer", "minimum": 0, "default": 3 },
            "backoff_initial_s": { "type": "number", "minimum": 0, "default": 0.5 },
            "backoff_max_s": { "type": "number", "minimum": 0, "default": 6 }
          },
          "required": ["max", "backoff_initial_s", "backoff_max_s"]
        }
      },
      "required": ["provider", "model", "temperature", "timeout_s"]
    },
    "retriever": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "k": { "type": "integer", "minimum": 1, "default": 10 },
        "threshold": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.8 },
        "strategy": { "type": "string", "enum": ["bm25", "hybrid"], "default": "bm25" }
      },
      "required": ["k", "threshold"]
    },
    "ingest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "profiles": {
          "type": "array",
          "description": "Список активных профилей парсинга",
          "items": { "type": "string", "enum": ["text", "table"] },
          "default": ["text"]
        },
        "limits": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_pages": { "type": "integer", "minimum": 1, "default": 1000 },
            "max_mb": { "type": "integer", "minimum": 1, "default": 512 },
            "chunk_size": { "type": "integer", "minimum": 100, "default": 1000 },
            "chunk_overlap": { "type": "integer", "minimum": 0, "default": 100 }
          },
          "required": ["max_pages", "max_mb"]
        },
        "paths": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 0,
          "default": []
        }
      },
      "required": ["profiles", "limits"]
    },
    "ui": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "show_sources": { "type": "boolean", "default": false },
        "allow_external_context": { "type": "boolean", "default": false },
        "read_only_settings": { "type": "boolean", "default": true },
        "language": { "type": "string", "const": "ru-RU", "default": "ru-RU" }
      },
      "required": ["show_sources", "allow_external_context", "language"]
    },
    "observability": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "otel_enabled": { "type": "boolean", "default": true },
        "otel_endpoint": { "type": "string", "default": "http://localhost:4317" },
        "log_retention_days": { "type": "integer", "minimum": 1, "default": 90 }
      },
      "required": ["otel_enabled", "log_retention_days"]
    },
    "security": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "auth_mode": { "type": "string", "enum": ["none", "bearer", "oidc"], "default": "bearer" },
        "oidc": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "issuer": { "type": "string" },
            "authorization_endpoint": { "type": "string" },
            "token_endpoint": { "type": "string" },
            "client_id": { "type": "string" }
          }
        },
        "rbac": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "roles": {
              "type": "array",
              "items": { "type": "string", "enum": ["admin", "user", "viewer"] },
              "default": ["admin", "user"]
            }
          }
        }
      },
      "required": ["auth_mode"]
    },
    "storage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "db_path": { "type": "string", "default": "./data/spree.sqlite" },
        "data_dir": { "type": "string", "default": "./data" },
        "backups_dir": { "type": "string", "default": "./backup" },
        "sqlite": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "journal_mode": { "type": "string", "enum": ["WAL", "DELETE"], "default": "WAL" },
            "synchronous": { "type": "string", "enum": ["OFF", "NORMAL", "FULL"], "default": "NORMAL" }
          },
          "required": ["journal_mode", "synchronous"]
        }
      },
      "required": ["db_path", "data_dir"]
    },
    "plugins": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "parser": {
          "type": "array",
          "description": "Список ParserPlugin (контракт стабилен в MVP)",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "enabled": { "type": "boolean", "default": true },
              "config": { "type": "object", "additionalProperties": true }
            },
            "required": ["name"]
          },
          "default": []
        }
      }
    },
    "feature_gates": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tables_r03": { "type": "boolean", "default": true },
        "ocr_post_v1_1": { "type": "boolean", "default": false }
      },
      "required": ["tables_r03", "ocr_post_v1_1"]
    },
    "compliance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "log_pii": { "type": "boolean", "const": false, "default": false },
        "retention_days": { "type": "integer", "minimum": 1, "default": 90 }
      },
      "required": ["log_pii", "retention_days"]
    },
    "i18n": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "locale": { "type": "string", "const": "ru-RU", "default": "ru-RU" }
      },
      "required": ["locale"]
    }
  },
  "required": [
    "version",
    "privacy",
    "limits",
    "llm",
    "retriever",
    "ingest",
    "ui",
    "observability",
    "security",
    "storage",
    "plugins",
    "feature_gates",
    "compliance",
    "i18n"
  ],
  "examples": [
    {
      "version": "0.1.0",
      "privacy": { "profile": "strict_local", "kill_switch": false },
      "limits": { "rate_per_min": 100, "max_tokens": 1024 },
      "llm": {
        "provider": "ollama",
        "model": "llama3.1:8b",
        "temperature": 0.2,
        "timeout_s": 60,
        "retries": { "max": 3, "backoff_initial_s": 0.5, "backoff_max_s": 6 }
      },
      "retriever": { "k": 10, "threshold": 0.8, "strategy": "bm25" },
      "ingest": {
        "profiles": ["text"],
        "limits": { "max_pages": 1000, "max_mb": 512, "chunk_size": 1000, "chunk_overlap": 100 },
        "paths": ["/data/docs", "/data/specs.md"]
      },
      "ui": { "show_sources": true, "allow_external_context": false, "read_only_settings": true, "language": "ru-RU" },
      "observability": { "otel_enabled": true, "otel_endpoint": "http://localhost:4317", "log_retention_days": 90 },
      "security": { "auth_mode": "bearer" },
      "storage": { "db_path": "./data/spree.sqlite", "data_dir": "./data", "backups_dir": "./backup", "sqlite": { "journal_mode": "WAL", "synchronous": "NORMAL" } },
      "plugins": { "parser": [{ "name": "markdown", "enabled": true }, { "name": "docx" }] },
      "feature_gates": { "tables_r03": true, "ocr_post_v1_1": false },
      "compliance": { "log_pii": false, "retention_days": 90 },
      "i18n": { "locale": "ru-RU" }
    }
  ]
}